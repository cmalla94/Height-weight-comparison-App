<h1> Editing Profiles </h1>
<%= form_for :person, url: person_path(@person), method: :patch do |f| %>
<!---ERROR MESSAGES TO BE DISPLAYED IF ANY -->
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@person.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @person.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!--- END OF ERROR MESSAGE CODE -->
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :city %> <br>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :country %> <br>
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :weight %> <br>
    <%= f.text_field :weight %>
  </p>
  <p>
    <%= f.label :height %> <br>
    <%= f.text_field :height %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', people_path %>
